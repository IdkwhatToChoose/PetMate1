@model PetMate.ViewModels.UserViewModel

@{
    Layout = "_Layout";
}
<form asp-controller="Login" asp-action="Login" method="post">
     <div class="container-fluid pt-5">
        <div class="container">
            <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
                <h6 class="text-primary text-uppercase">Contact Us</h6>
                <h1 class="display-5 text-uppercase mb-0">Please Feel Free To Contact Us</h1>
            </div>
            <div class="row g-5">
                <div class="col-lg-7">
                    <form>
                        <div class="row g-3">
                           
                                
                            
                            <div class="col-12">
                                <input type="text" class="form-control bg-light border-0 px-4" placeholder="Name" asp-for="Username" style="height: 55px;">
                            </div>

                            <div class="col-12">
                                <input type="email" class="form-control bg-light border-0 px-4" placeholder="Email" asp-for="Email" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <input type="password" class="form-control bg-light border-0 px-4" placeholder="Password" asp-for="Password" style="height: 55px;">
                            </div>
                            <div>
                                <a class ="form-control bg-light border-0 px-4" style="height: 55px;" href="@Url.Action("Registration","Login")">Register</a>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit" manifest="">Login</button>
                            </div>
                            <div class="col-12">
                                <div class="err py-2" >
                                    <h5>Wrong password or username </h5>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</form>
<style>
    .err {
        background-color: rgba(241, 3, 3, 0.829);
        text-transform: uppercase;
        text-align: center;
    }
    h5 {
        color: white;
   }
</style>

