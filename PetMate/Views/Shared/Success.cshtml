@model PetMate.ViewModels.SuccessStatus
@using PetMate.ViewModels;

@{

    var model = Model;
    var url = Model.Operation == OType.Email ? Url.Action("Index", "Home") : Url.Action("UserHomePage", "User"); 

    Layout = null;
    string icon = Model.Operation == OType.Email ? "mail" : "donation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mail sent !</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="wrap">
        <div class="header">
            <i class="icf-@icon"></i>
            <h2>@Model.Header</h2>
        </div>
        <div class="c-body">
            <p> @Model.Message</p>
            <button><a href="@url" class="nav-item nav-link" style="text-decoration:none;color:white;">Go Home</a></button>
           @* Thank you! Your email was sent successfully. We will reply as soon as possible. If you need quick help, please contact us directly. We appreciate your message and hope you have a great day!*@
        </div>
    </div>
</body>
</html>
